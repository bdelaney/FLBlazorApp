<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon" />
    <label for="navmenu-toggle" class="navmenu-icon"><FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Default" /></label>
    <nav class="sitenav" aria-labelledby="main-menu">
        <FluentNav Id="main-menu" Width="250" Collapsible="true" Title="Navigation menu" @Expanded="true" CustomToggle="true">
             <FluentNavItem Href="/" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.Home())" IconColor="Color.Accent">Home</FluentNavItem>
             <FluentNavItem Href="counter" Icon="@(new Icons.Regular.Size20.NumberSymbolSquare())" IconColor="Color.Accent">Counter</FluentNavItem>
             <FluentNavItem Href="weather" Icon="@(new Icons.Regular.Size20.WeatherPartlyCloudyDay())" IconColor="Color.Accent">Weather</FluentNavItem>
        </FluentNav>
    </nav>
</div>

